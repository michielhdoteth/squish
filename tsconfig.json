{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "index.ts",
    "config.ts",
    "core/**/*.ts",
    "features/**/*.ts",
    "db/**/*.ts",
    "tools/**/*.ts",
    "drizzle/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "tests", "benchmark", "docs"]
}
